 <record id="lot_kanban_view" model="ir.ui.view">
            <field name="name">lot Kanban</field>
            <field name="model">project.lots</field>
            <field name="arch" type="xml">
                <kanban>
                 
                    <field name="libele"/>
                    <field name="image" />
              <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_tags_section">
                                  

                                   <field name="libele"/>
                  
                                     <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('project.lots', 'image', record.id.value)"/>
                                </div>

                                </div>
                               
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


